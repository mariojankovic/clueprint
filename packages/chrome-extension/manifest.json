{
  "manifest_version": 3,
  "name": "Clueprint",
  "version": "0.1.0",
  "description": "Give your AI deep browser visibility - element selection, error monitoring, flow recording",
  "icons": {
    "16": "icons/clueprint.png",
    "48": "icons/clueprint.png",
    "128": "icons/clueprint.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "devtools_page": "devtools/devtools.html",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/clueprint.png",
      "48": "icons/clueprint.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Activate Clueprint"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
